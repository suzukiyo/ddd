<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="introduction.infrastructure.datasource.IntroductionSummaryMapper">

    <resultMap id="person" type="introduction.domain.fundamentals.person.Person">
        <result property="personBasic.birthday.year" column="birthday_year" />
        <result property="personBasic.birthday.month" column="birthday_month" />
        <result property="personBasic.birthday.day" column="birthday_day" />
    </resultMap>
    <select id="findPerson" resultMap="person">
        SELECT
            birthday_year
            , birthday_month
            , birthday_day
            , gender
            , prefecture
            , city
            , firstName
            , LastName
            , children
            , maritalStatus
            , hobby
        FROM
            person
    </select>

    <resultMap id="hobby" type="introduction.domain.model.hobby.Hobby">
    </resultMap>
    <select id="findHobbies" resultMap="hobby">
        SELECT
            name
        FROM
            hobby
    </select>

    <resultMap id="workBasic" type="introduction.domain.model.work.basic.WorkBasic">
    </resultMap>
    <select id="findWorkBasic" resultMap="workBasic">
        SELECT
            introduction
        FROM
            work
    </select>

    <resultMap id="workHistory" type="introduction.domain.model.work.history.WorkHistory">
    </resultMap>
    <select id="findWorkHistories" resultMap="workHistory">
        SELECT
            name
            , content
        FROM
            work_history
    </select>

    <resultMap id="workSkill" type="introduction.domain.model.work.skill.WorkSkill">
    </resultMap>
    <select id="findWorkSkills" resultMap="workSkill">
        SELECT
            name
            , content
        FROM
            work_skill
    </select>
</mapper>